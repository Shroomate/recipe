{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipe Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the recipe",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2} -0700$",
      "description": "Date in format YYYY-MM-DD HH:MM:SS -0700"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly slug (lowercase, hyphens only)"
    },
    "layout": {
      "type": "string",
      "enum": ["recipe"],
      "description": "Must be 'recipe'"
    },
    "content": {
      "type": "object",
      "properties": {
        "mainIngredients": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of main dish ingredients"
        },
        "sideIngredients": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of side dish/sauce ingredients (optional)"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "instructions": {
                "type": "string"
              }
            },
            "required": ["title", "instructions"]
          },
          "description": "Preparation steps"
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Cooking tips and suggestions"
        }
      },
      "required": ["mainIngredients", "steps"]
    }
  },
  "required": ["title", "date", "slug", "layout", "content"]
} 